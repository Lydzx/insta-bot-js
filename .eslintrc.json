{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "standard",
        "raven"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["warn", "double"],
        "sort-keys": "off",
        "linebreak-style": "off",
        "consistent-return": "off",
        "prefer-destructuring": "off",
        "no-magic-numbers" :"off",
        "no-console": "off",
        "camelcase": "off",
        "global-require": "off",
        "no-param-reassign": "off",
        "complexity": [
            "warn",
            15
        ]
    }
}
